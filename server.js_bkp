const express = require("express");
const app = express();
const PORT = process.env.PORT || 3000;

app.get("/orders", (req, res) => {
  res.json([
    { id: 1, item: "Laptop", qty: 1 },
    { id: 2, item: "Phone", qty: 2 }
  ]);
});

app.listen(PORT, () => {
  console.log(`Orders service running on port ${PORT}`);
});

